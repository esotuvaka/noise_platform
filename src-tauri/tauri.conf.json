{
	"build": {
		"beforeDevCommand": "yarn dev",
		"beforeBuildCommand": "yarn build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "noise_platform",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": ".*"
			},
			"dialog": {
				"all": false,
				"ask": false,
				"confirm": false,
				"message": false,
				"open": true,
				"save": true
			},
			"path": {
				"all": true
			},
			"fs": {
				"all": false,
				"copyFile": false,
				"createDir": true,
				"exists": true,
				"readDir": true,
				"readFile": true,
				"removeDir": false,
				"removeFile": false,
				"renameFile": false,
				"scope": ["$APP/*", "$DESKTOP/*"],
				"writeFile": true
			},
			"window": {
				"all": false,
				"setSize": true
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "noise-platform.tauri.dev",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "noise_platform",
				"width": 800,
				"height": 600
			}
		]
	}
}
